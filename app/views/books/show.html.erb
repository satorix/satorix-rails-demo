<div class="container pt-3">
  <% if notice %>
    <p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
  <% end %>

  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <%= link_to 'Edit', edit_book_path(@book) %> |
  <%= link_to 'Back', books_path %>
</div>
